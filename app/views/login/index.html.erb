<html lang="en" dir="ltr">
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <meta content="7+ GB of storage, less spam, and mobile access. Gmail is email that's intuitive, efficient, and useful. And maybe even fun." name="description">
    <title>
      Gmail Agregator - service provided by Microdevelop d.o.o.
    </title>
  </head>
  
  <body bgcolor="#ffffff" vlink="#0000ff" link="#0000ff">
    <table cellspacing="0" cellpadding="0" border="0" align="center" width="95%">
      <tbody>
        <tr valign="top">
          <td width="1%">
            <img border="0" align="left" width="143" vspace="10/" height="59" alt="Gmail" src="https://mail.google.com/mail/help/images/logo2.gif">
          </td>
          <td bgcolor="#ffffff" width="99%" valign="top">
            <table cellpadding="1" width="100%">
              <tbody>
                <tr valign="bottom">
                  <td><div align="right">&nbsp;</div></td>
                </tr>
                <tr>
                  <td style="font-family: arial; text-align: left; font-weight: bold; padding: 5px 0pt;" rowspan="2" bgcolor="#c3d9ff" class="bubble"><b>&nbsp;Welcome to Gmail Agregator</b> [beta]</td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>

    <table cellspacing="1" cellpadding="5" align="center" width="94%">
      <tbody>
        <tr>
          <td width="75%" valign="top">
            Multi-email agregator app
          </td>
          <td valign="top">
            <div id="login">
              <table class="form-noident" cellspacing="3" cellpadding="5" border="0" width="100%">
                <tbody>
                  <tr>
                    <td bgcolor="#e8eefa" valign="top" nowrap="nowrap"> 
                      <% form_tag :action => 'login' do%>
                        <p>
                          <table cellspacing="1" cellpadding="1" align="center" width="100%"  style="font: 80% sans-serif;">
                            <td width="35%" valign="center" align="right">
                              <%= label_tag :"Username" %>: 
                            </td>
                            <td valign="top">
                              <%= text_field_tag :username %>
                            </td>
                          </table>
                        </p>
                        <p>
                          <table cellspacing="1" cellpadding="1" align="center" width="100%" style="font: 80% sans-serif;">
                            <td width="35%" valign="center" align="right">
                              <%= label_tag :"Password" %>:
                            </td>
                            <td valign="top">
                              <%= password_field_tag :password %>
                            </td>
                          </table>
                        </p>
                        <p>
                          <table cellspacing="1" cellpadding="1" align="center" width="100%" style="font: 80% sans-serif;">
                            <td width="35%" valign="center" align="center">
                              <%= submit_tag "Sign in" %>
                            </td>
                          </table>
                        </p>
                      <% end %>

 
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </td>
        </tr>
      </tbody>
    </table>

    <br>
    
    <table cellspacing="0" cellpadding="3" bgcolor="#c3d9ff" align="center" width="95%" style="margin-bottom: 5px;">
      <tbody>
        <tr>
          <td style="text-align: left;" rowspan="2" class="bubble">
            <div align="center">
              <font color="#666666" size="-1">&copy;2010 Microdevelop d.o.o.
              </font>
            </div>
          </td>
        </tr>
      </tbody>
    </table>

  </body>
</html>
